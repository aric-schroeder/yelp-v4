<%include ../partials/header%>
<div class="container">
<div class="row">

<h1 class="col-lg-12">Add New Comment<%=campground.name%></h1>

    <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="author">
        </div>
        <div class="form-group">
            <button class="btn-lg btn-primary">Submit</button>
        </div>    
    </form>
</div>
<p><a href="/campgrounds">Go back</a></p>

</div>


<%include ../partials/footer%>