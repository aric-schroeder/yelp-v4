<% include ../partials/header%>

<div class="container">
    <div class="row">

    <h1 class="col-lg-12">Create a New Campground</h1>

        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control" id="exampleFormControlTextarea1" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group">
                <button class="btn-lg btn-primary">Submit</button>
            </div>    
        </form>
    </div>
    <p><a href="/campgrounds">Go back</a></p>

</div>

