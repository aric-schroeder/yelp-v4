<% include ../partials/header%>





<div class="container">
    <header class="jumbotron">
        <div class="container"> 
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p><a href="/campgrounds/new" class="btn-primary btn-lg">Add new campground</a></p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>    
        <% campgrounds.forEach((campground) => { %>
        <div class="col-lg-4 col-sm-6">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="<%=campground.image%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title text-center"><%=campground.name%></h5>
                    <p class="card-text"><%=campground.description%></p>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        </div>
       <% });%>
    </div>

</div>

<% include ../partials/footer%>
